<?xml version="1.0"?> 
<sdf version="1.4">
  <world name="default">

    <!-- Ground Plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>
    

   <model name ='camera_unit'>
     <pose>-0 0 0 0 0 0</pose>
     <link name ='base'>
       <pose>0 0 0.1 0 0 0</pose>
       <!--<pose>0 0.01 2.5 0 0 0</pose>-->
       <collision name ='base_collision'>
         <geometry>
           <box><size>0.2 0.2 0.2</size></box>
         </geometry>
       </collision>
       <visual name ='base_visual'>
         <geometry>
           <box><size>0.2 0.2 0.2</size></box>
         </geometry>
         <material>
         </material>
       </visual>
      </link>
     <link name = 'pan'>
	<pose>0 0 0.4 0 0 0</pose>
	<collision name ='pan_collision'>
         <geometry>
           <box><size>0.2 0.2 0.5</size></box>
         </geometry>
        </collision> 
	<visual name ='pan_visual'>
         <geometry>
           <box><size>0.2 0.2 0.5</size></box>
         </geometry>
       </visual>
     </link>
     <joint type = "revolute" name = "base_pan">
        <pose>0 0 0.4 0 0 0</pose>
	<child>pan</child>
	<parent>base</parent>
	<axis>
	  <xyz>0 0 1</xyz>
	</axis>
     </joint>
     <link name = 'tilt'>
	<pose>0 0 0.8 0 0 0</pose>
	<collision name ='tilt_collision'>
         <geometry>
           <box><size>0.4 0.4 0.1</size></box>
         </geometry>
        </collision> 
	<visual name ='tilt_visual'>
         <geometry>
           <box><size>0.4 0.4 0.3</size></box>
         </geometry>
       </visual>
     </link>
     <joint type = "revolute" name = "pan_tilt">
        <pose>0 0 1 0 0 0</pose>
	<child>tilt</child>
	<parent>pan</parent>
	<axis>
	  <xyz>0 1 0</xyz>
	</axis>
     </joint>
   <link name = 'camera'>
    <include>
      <uri>model://camera</uri>
      <pose>0 0 1 0 0 0</pose>
    </include>
   </link>
    <joint name="camera_tilt" type="revolute">
      <child>camera</child>
      <parent>tilt</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>
   </model>



<!-- Light Source -->
        <light type="directional" name="sun">
            <pose>0 0 10 0 0 0</pose>
            <diffuse>1.0 1.0 1.0 1</diffuse>
            <specular>0 0 0 1</specular>
            <attenuation>
                <range>20</range>
                <linear>0.01</linear>
                <constant>0.8</constant>
                <quadratic>0.0</quadratic>
            </attenuation>
            <direction>0.0 0.2 -8.0</direction>
            <cast_shadows>true</cast_shadows>
        </light>
     
  </world>
</sdf>
